@using MVCCivicaEmployeeMaster.ViewModels
@model LoginViewModel
<form asp-action="Login" method="post">
    <div class="container">
        <div class="loader-overlay" style="display: none;">
            <img src="~/assets/loaderImage.gif" class="loader-image" alt="loading" />
        </div>
        <h2 class="custom-heading text-center">SIGN IN</h2>
        <br />
        <div class="position-relative">
            <div class="row justify-content-center">
                <div class="col-md-6 mb-3">
                    <div class="card shadow">
                        <div class="card-body">
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                            {
                                <div class="form-group mb-3">
                                    <label asp-for="UserName" class="form-label"><i class="fa fa-user"></i> Username</label>
                                    <input asp-for="UserName" class="form-control" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="form-label"><i class="fa fa-key"></i> Password</label>
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <br />
                                <button type="submit" value="Submit" class="btn btn-primary btn-block" style="background-color:#00b4c1">SIGN IN</button>
                            }
                            <br />
                            <br />
                            <div class="d-flex justify-content-between">
                                <p>Not a Member? <a asp-action="Register" asp-controller="Auth"><span class="btn btn-link">Sign Up</span></a></p>
                                <a asp-action="ForgotPassword" asp-controller="Auth"><span class="btn btn-link ">Forgot Password?</span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


<style>
    .loader-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.8);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000; 
    }

   
    .loader-image {
        width: 50px;
        height: 50px;
    }

    .form-label {
        font-weight: bold;
    }

    .custom-heading {
        margin-top: 20px;
        font-size: 3rem; 
        font-weight: bold; 
        color: #000000; 
        text-align: center; 
    }

    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
    }

    .card-body {
        padding: 20px;
    }

    .btn-block {
        background-color: #009CA6;
        width: 100%;
    }
</style>
